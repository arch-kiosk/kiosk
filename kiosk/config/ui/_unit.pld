unit_narrative.list:
  record_type: unit_narrative
  view_type: list  # (can be list, sheet or file_list or harris_matrix)
  max_height: 20em
  max_height_expandable: true
  fields_selection: dsd
  layout_settings:
    type: list
    orchestration_strategy: table  # (the default for the sheet scenario)
    order_records_by: [">date", "id_excavator"]
    allow_ordering_by: ["date", "id_excavator"]
    order: [date, id_excavator, narrative]
  ui_elements:
    date:
      layout:
        min_width: 15%
    id_excavator:
      layout:
        min_width: 20%
    narrative:
      layout:
        min_width: 70%
        max_height: max

unit_files.list:
  record_type: dayplan
  view_type: list  # (can be list, sheet or file_list or harris_matrix)
  max_height: auto
  fields_selection: dsd
  layout_settings:
    type: list
    orchestration_strategy: gallery
    order_records_by: [">modified", "file_datetime"]
    allow_ordering_by: ["modified", "modified_by", "file_datetime"]
    order: [uid_image, modified, modified_by, file_datetime]

  ui_elements:
    "file_datetime":
      element_type:
        name: "datetimefield"
        text: "file date time"
        value: "#(dayplan/uid_image)"
        lookup:
          lookup_type: "file_attribute"
          attribute_name: "file_datetime"

unit_loci.list:
  record_type: locus
  filter_records: "exclude('type', 'hidden')"
  view_type: list
  dsd_view: "locus.sheet.view.yml"
  max_height: 20em
  fields_selection: dsd

  layout_settings:
    type: list
    orchestration_strategy: table
    order_records_by: [">arch_context"]
    allow_ordering_by: [arch_context, type, date_defined, date_closed, recorded_by]
    order: [arch_context, type, date_defined, date_closed, recorded_by, description]

