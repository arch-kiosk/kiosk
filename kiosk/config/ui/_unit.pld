config:
  format_version: 1

compilations:
  unit_compilation:
    name: unit view
    record_type: unit
    groups:
      group_1:
        type: "stacked"
        parts:
          unit.sheet:
            text: '#(unit/term_for_unit) #(unit/arch_context)'
            position: 1
#          involved_as.list:
#            text: 'team members'
#            position: 2
          unit_narrative.list:
            text: 'narratives'
            position: 3
      group_2:
        type: "accordion"
        parts:
          unit_files.list:
            text: 'photos & files'
            position: 1
          unit_loci.list:
            text: '#(unit/term_for_locus) list'
            position: 2
          unit_cm.list:
            text: 'collected materials'
            position: 3

unit.sheet:
  record_type: unit
  view_type: sheet  # (can be list, sheet or file_list or harris_matrix)
  fields_selection: dsd
  dsd_view: unit.sheet.view
  layout_settings:
    orchestration_strategy: columns  # (the default for the sheet scenario)
    default_element_visibility: "."
    order:
      - qfsite
      - arch_context
      - legacy_unit_id
      - name
      - line_identifiers
      - unit_creation_date
      - id_excavator
      - excavator_full_name
      - type
      - method
      - purpose
      - ...
      - line_2
      - created
      - modified
      - modified_by
  ui_elements:
    qfsite:
      element_type:
        name: "TextField"
        text: "site"
        value: "#(site/arch_context)"
        is_identifier: true
        links_to: site
    term_for_locus:
      element_type:
        visible: false
    term_for_unit:
      element_type:
        visible: false
    coordinates:
      layout:
        min_width: 3
    line_identifiers:
      element_type:
        name: "line"
        transparent: true
      layout:
        min_width: max
    line_2:
      element_type:
        name: "line"
        transparent: true
      layout:
        min_width: max

